#header-container
    #background-color-picker.column.large-12
        h3
            | Background Color
        .large-12
            label#hex_label
                | Hex
                input#background-hex-color(type = "text" value = "#191919" maxlength="7").large-12
        .large-12#background_color_bar
        .large-12#rgb-background
            .large-4.column.no-padding
                label
                    | R
                    input#background-red.backgroundRgb(type = "text" maxlength="3" value = "25")
            .large-4.column.no-padding
                label
                    | G
                    input#background-green.backgroundRgb(type = "text" maxlength="3" value = "25")
            .large-4.column.no-padding
                label
                    | B
                    input#background-blue.backgroundRgb(type = "text" maxlength="3" value = "25")
    #color-picker.column.large-12
        h3
            | Pixel Color
        .large-12
            label#hex_label
                | Hex
                input#pix-hex-color(type = "text" value = "#000" maxlength="7").large-12
        .large-12#color_bar
        .large-12#rgb
            .large-4.column.no-padding
                label
                    | R
                    input#pix-red.rgb(type = "text" maxlength="3" value = "0")
            .large-4.column.no-padding
                label
                    | G
                    input#pix-green.rgb(type = "text" maxlength="3" value = "0")
            .large-4.column.no-padding
                label
                    | B
                    input#pix-blue.rgb(type = "text" maxlength="3" value = "0")
    #control_view.column
        #view-button.large-12.color-button-styling
            | View Mode
        #draw-button.large-12.color-button-styling
            | Draw Mode
        #reset-button.large-12.color-button-styling
            | Reset
        #control_panel.color-button-styling
            span.letter G
            span.desc_text Toggle View
